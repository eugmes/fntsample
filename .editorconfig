root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{c,h}]
indent_style = space
indent_size = 4

[ChangeLog]
indent_style = tab

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2

[*.pl]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
